## Global variables
variable "name" {
  type    = string
  default = "friday"
}

variable "namespace" {
  type    = string
  default = "test1"
}

## Vars for Health check
variable "health_check_name" {
  type = string
}

variable "health_check_path" {
  type    = string
  default = "/"
}

## Vars for IP Origin Pool
variable "loadbalancer_algorithm" {
  type    = string
  default = "ROUND ROBIN"
}

variable "ip_origin_pool_port" {
  type    = number
  default = 80
}

variable "origin_pool_service_name" {
  type    = string
  default = "boutique-frontend.test1"
}

variable "origin_pool_virtual_site" {
  type    = string
  default = "test1-vs"
}

## Load Balancer
variable "domains" {
  default = "friday-tf.aws.learnf5.cloud"
}

variable "http_port" {
  default = 80
}
